<!DOCTYPE html>
<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 <link rel="stylesheet" href="/assets/main2.css">

<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Leads</title>
</head>
<body>

<div class="container">
  <form method="POST" action="/display2">
    <div class="row">
      <div class="col-md-8">
           <label for="Leads">Filter Lead</label>
  <select class="form-control" id="Leads" name="Leads">
    <option value="Oxygen">Oxygen</option>
    <option value="ICU Bed With Ventilator">ICU Bed With Ventilator</option>
    <option value="ICU Bed Without Ventilator">ICU Bed Without Ventilator</option>
    <option value="Remdesivir">Remdesivir</option>
    <option value="FabiFlu">FabiFlu</option>
    <option value="Plasma">Plasma</option>
    <option value="Food Servies">Food Servies</option>
    <option value="Ambulance">Ambulance</option>
    <option value="Tocilizumab">Tocilizumab</option>
  </select>
</div> 
<div style="margin-top: 2%;" class="col-md-4">
  <input  type="submit" class="btn btn-primary">
  <a href="/display" class="btn btn-success">Show all Leads</a>
  <a href="/" class="btn btn-light">Home</a>
  
</div>
</div>

</form>
</div>
<div class="container">


<div class="row">

<% arr.forEach(function(arr1){ %>

<div class="col-lg-4 col-md-6 col-sm-12">
	<div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= arr1.leadType %></h3>
      <!-- <span></span> -->
      <p class="card-text"><%= arr1.source %></p>
      <p class="card-text"><%= arr1.contact %></p>
      <p class="card-text"><%= arr1.address %></p>
      <p class="card-text"><%= arr1.city %></p>
      <% var arr2=arr1.createdAt.toString().split(" ")%>
      <% if(arr1.verifyStatus){ %>
      <p style="color: green;float: right;" class="card-text">Verified</p>
      <p class="card-text">Verified on: <%= arr1.Dateverify %></p>
      <% }else{ %>
      <p style="color: red;float: right;" class="card-text">Unverified</p>
      <p class="card-text">Updated on:<%= arr2[2] %>&nbsp;<%= arr2[1] %>&nbsp;<%= arr2[3] %></p>
      <% } %>
      <p class="card-text">Updated at: <%= arr2[4] %></p>
    </div>

  </div>
</div>
<% });%>
</div>
</div>
<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

</body>
<script>
  $('#myModal').on('shown.bs.modal', function () {
  $('#myInput').trigger('focus')
})
</script>

</html>